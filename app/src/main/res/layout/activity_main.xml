<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controls.MainActivity"
    tools:layout_editor_absoluteY="25dp">


    <com.globallogic.remotepilot.utils.VerticalSeekBar.SeekBarRotator
        android:layout_width="50dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="50dp">

        <SeekBar
            android:id="@+id/sb_speedThrottle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.globallogic.remotepilot.utils.VerticalSeekBar.SeekBarRotator>

    <com.globallogic.remotepilot.utils.VerticalSeekBar.SeekBarRotator
        android:layout_width="50dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="50dp">

        <SeekBar
            android:id="@+id/sb_leftThrottle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.globallogic.remotepilot.utils.VerticalSeekBar.SeekBarRotator>

    <com.globallogic.remotepilot.utils.VerticalSeekBar.SeekBarRotator
        android:layout_width="50dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="10dp">

        <SeekBar
            android:id="@+id/sb_rightThrottle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.globallogic.remotepilot.utils.VerticalSeekBar.SeekBarRotator>

    <TextView
        android:id="@+id/tv_speedVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Value: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>